<!DOCTYPE html>
<html lang="zh">
<head>
	<meta charset=utf-8>
	<title>行益网-Comments Manage</title>
	<link rel="stylesheet" type="text/css" href="/css/general.css">
	<script type="text/javascript" src="/js/jquery-1.11.1.js"></script>
	<script type="text/javascript" src="/js/general.js"></script>
	<script type="text/javascript" src="/js/interface.js"></script>
	<script type="text/javascript" src="/js/pager.js"></script>
</head>
<body>
	
	<!-- the header, including logo, search input, login and register entries -->
	<header>
		<div class="wrapper" id="header-wrapper">
			<div id="logo">
				<div id="logo-img">
					<img src="/img/logo.png">
				</div>
				<div id="logo-name">
					<img src="/img/name.png">
				</div>
			</div>
			<!-- the search input, login and register entries -->
			<div id="entry">
				<div id="search">
					<input id="search-box" type="search">
					<img id="search-icon" src="/img/search.png" placeholder="搜索..." autocomplete="off">
				</div>
				<label>您好，<a id="user-entry-superuser">Admin</a></label>
				<a id="dashboard-entry-superuser">管理面板</a>
				<a id="logout-entry">登出</a>
			</div>
		</div>
	</header>

	<!-- the container -->
	<div id="content">
		<div class="wrapper" id="admin-comments-management-wrapper">
			<section class="container">
				<h1 class="section-title">
					评论审核
				</h1>
				<section class="show-result">
					 共有{{uncheckedNum}}个未管理评论
				</section>
				<section class="filter">
					<label>显示条件</label>
					<a id="all_project_tab">未管理的评论</a>
					<a id="star_project_tab">通过审批的评论</a>
					<a id="join_project_tab">未通过的评论</a>
				</section>
				<section class="table-header">
					<article class="row">
						<div class="col-1">
							<input type="checkbox" id="check-all">
						</div>
						<div class="col-2">
							时间
						</div>
						<div class="col-3">
							评论项目
						</div>
						<div class="col-4">
							评论作者
						</div>
						<div class="col-5">
							评论内容
						</div>
						<div class="col-6">
							<button class="rounded-button" id="preserve-checked">通过</button>
							<button class="rounded-button red-button" id="delete-checked">删除</button>
						</div>
					</article>
				</section>
				<!-- Tab 1 -->
				<section id="all_project" class="tab">
					<section class="show">
						<div class="collection">
							{{#each uncheckedComment}}
							<div class="row">
								<div class="for-id">{{comment._id}}</div>
								<div class="col-1">
									<input type="checkbox" class="check">
								</div>
								<div class="col-2">
									{{comment.date}}
								</div>
								<div class="col-3">
									{{comment.project.name}}
								</div>
								<div class="col-4">
									{{user.username}}
								</div>
								<div class="col-5">
									{{comment.comment}}
								</div>
								<div class="col-6">
									<button class="rounded-button light-button preserve">√</button>
									<button class="rounded-button light-red-button delete">x</button>
								</div>
							</div>
							{{/each}}					
						</div>
					</section>
					<section class="page_navigation">
						<input type='hidden' class='current_page' />
						<input type='hidden' class='show_per_page' value='10' />
					</section>
				</section>

				<!-- Tab 2 -->
				<section id="star_project" class="tab">
					<section class="show">
						<div class="collection">
							{{#each passedComment}}
							<div class="row">
								<div class="for-id">{{comment._id}}</div>
								<div class="col-1">
									<input type="checkbox" class="check">
								</div>
								<div class="col-2">
									{{comment.date}}
								</div>
								<div class="col-3">
									{{comment.project.name}}
								</div>
								<div class="col-4">
									{{user.username}}
								</div>
								<div class="col-5">
									{{comment.comment}}
								</div>
								<div class="col-6">
									<button class="rounded-button light-button preserve">√</button>
									<button class="rounded-button light-red-button delete">x</button>
								</div>
							</div>
							{{/each}}
						</div>
					</section>
					<section class="page_navigation">
						<input type='hidden' class='current_page' />
						<input type='hidden' class='show_per_page' value='10' />
					</section>
				</section>

				<!-- Tab 3 -->
				<section id="join_project" class="tab">
					<section class="show">
						<div class="collection">
							{{#each failedComment}}
							<div class="row">
								<div class="for-id">{{comment._id}}</div>
								<div class="col-1">
									<input type="checkbox" class="check">
								</div>
								<div class="col-2">
									{{comment.date}}
								</div>
								<div class="col-3">
									{{comment.project.name}}
								</div>
								<div class="col-4">
									{{user.username}}
								</div>
								<div class="col-5">
									{{comment.comment}}
								</div>
								<div class="col-6">
									<button class="rounded-button light-button preserve">√</button>
									<button class="rounded-button light-red-button delete">x</button>
								</div>
							</div>
							{{/each}}
						</div>
					</section>
					<section class="page_navigation">
						<input type='hidden' class='current_page' />
						<input type='hidden' class='show_per_page' value='10' />
					</section>
				</section>
				
			</section>

	  <!-- <h1 class="back-nav" onclick="location.href='/superuser/home'" > -->
	  <!--   回到管理面板                                             -->
	  <!-- </h1>                                                            -->
		</div>
	</div>

	<!-- the footer -->
	<footer>
		<div class="wrapper">
			<h1 class="section-title">
				关于我们
			</h1>
			<section id="author-gallery">
				<img src="/img/p1.gif">
				<img src="/img/p2.gif">
				<img src="/img/p3.gif">
				<img src="/img/p4.gif">
				<img src="/img/p5.gif">
				<img src="/img/p6.gif">
				<img src="/img/p7.gif">
			</section>
			
			<section id="site-info">
				<ul class="nav">
					<li>
						<h1>A</h1>
